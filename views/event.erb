<h1><%= @event.name%></h1>

<h3>Hosted by
    <%=@host.name%>
</h3>

<div style="width: 80%; height: 400px; border: 1px solid black; margin-bottom: 5px" class="">

    <img style="height: 200px" src="<%= @event.image_url%>">

    <iframe class="video-frame" src="<%= @event.video_url%>" frameborder="0" allowfullscreen></iframe>

    <p>Name:
        <%=@event.name%>
    </p>
    <p>Date:
        <%=@event.date%>
    </p>
    <p>Location:
        <%=@event.location%>
    </p>
    <p>Capacity:
        <%=@event.capacity%>
    </p>
</div>

<h1>Add friends to this event:</h1>

<form class="form-horizontal" action="/friend" method="post">
    <div class="form-group">
        <label class="col-sm-1" for="name">Name:</label>
        <input class="col-sm-4" type="text" name="name" id="name" value="">
    </div>
    <div class="form-group">
        <label class="col-sm-1" for="dob">Birthday:</label>
        <input class="col-sm-4" type="text" name="dob" value="">
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="gender">Gender:</label>
        <input class="col-sm-4" type="text" name="gender" id="gender" value="">
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="username">Username:</label>
        <input class="col-sm-4" type="text" name="username" id="username" value="">
    </div>

    <div class="form-group">
        <label class="col-sm-1" for="image_url">Image URL:</label>
        <input class="col-sm-4" type="text" name="image_url" value="">
    </div>

    <button class="btn btn-default" type="submit">Submit</button>
</form>
