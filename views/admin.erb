<h1>See all suppliers below:</h1>
<% @suppliers.each() do |supplier| %>
  <a href="/supplier/<%=supplier.id%>"><li><%= supplier.name %></li></a>
<% end %>

<h1>Create Supplier:</h1>

<form class="form-horizontal" action="/supplier" method="post">
  <div class="form-group">
    <label class="col-sm-1" for="name">Name:</label>
    <input class="col-sm-4" type="text" name="name" id="name" value="">
  </div>
  <div class="form-group">
    <label class="col-sm-1" for="expertise">Expertise:</label>
    <input class="col-sm-4" type="text" name="expertise" id="expertise" value="">
  </div>
  <div class="form-group">
    <label class="col-sm-1" for="cost_per_person">Cost per person:</label>
    <input class="col-sm-4" type="text" name="cost_per_person" id="cost_per_person" value="">
  </div>
  <div class="form-group">
    <label class="col-sm-1" for="description">Description:</label>
    <input class="col-sm-4" type="text" name="description" id="description" value="">
  </div>
  <div class="form-group">
    <label class="col-sm-1" for="logo_url">Logo URL:</label>
    <input class="col-sm-4" type="text" name="logo_url" id="logo_url" value="">
  </div>
    <button class="btn btn-default" type="submit">Submit</button>
</form>

<h1>See all categories below:</h1>
<% @categories.each() do |category| %>

  <li><%= category.name %></li>
<% end %>

<h1>Create Category:</h1>

<form action="/category" method="post">
  <div class="form-group">
    <label class="col-sm-1" for="name">Name:</label>
    <input class="col-sm-4" type="text" name="name" id="name" value="">
  </div>
    <button class="btn btn-default" type="submit">Submit</button>
</form>
